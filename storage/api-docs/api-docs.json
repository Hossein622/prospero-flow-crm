    "components": {
        "schemas": {
            "Calendar": {
                "required": [
                    "start_date",
                    "title"
                ],
                "type": "object"
            },
            "Campaign": {
                "required": [
                    "subject",
                    "body"
                ],
                "type": "object"
            },
            "Company": {
                "required": [
                    "name",
                    "country_id"
                ],
                "properties": {
                    "name": {
                        "description": "Name of the company",
                        "type": "string",
                        "example": "My Company"
                    },
                    "phone": {
                        "description": "Phone of the company",
                        "type": "string",
                        "example": "+34645600000"
                    },
                    "email": {
                        "description": "Email of the company",
                        "type": "string",
                        "format": "email",
                        "example": "info@company.com"
                    },
                    "country_id": {
                        "description": "Country ISO code of the company",
                        "type": "string",
                        "example": "ES"
                    },
                    "website": {
                        "description": "Website of the company",
                        "type": "string",
                        "example": "https://www.company.com"
                    }
                },
                "type": "object"
            },
            "Contact": {
                "required": [
                    "first_name"
                ],
                "properties": {
                    "first_name": {
                        "description": "Firstname of the contact",
                        "type": "string",
                        "example": "John"
                    },
                    "last_name": {
                        "description": "Lastname of the contact",
                        "type": "string",
                        "example": "Smith"
                    },
                    "phone": {
                        "description": "Phone of the contact",
                        "type": "string",
                        "example": "+34645000000"
                    },
                    "email": {
                        "description": "Email of the contact",
                        "type": "string",
                        "example": "john.smith@company.com"
                    },
                    "linkedin": {
                        "description": "Linkedin url of the contact",
                        "type": "string",
                        "example": "https://likedin.com/in/contactname"
                    },
                    "country": {
                        "description": "Country ISO code of the contact",
                        "type": "string",
                        "example": "CO"
                    },
                    "notes": {
                        "description": "Notes of the contact",
                        "type": "string",
                        "example": "We meet last time at the Coffe Shop inside the hotel."
                    }
                },
                "type": "object"
            },
            "Customer": {
                "required": [
                    "name",
                    "country"
                ],
                "properties": {
                    "name": {
                        "description": "Name of the company",
                        "type": "string",
                        "example": "My Company"
                    },
                    "business_name": {
                        "description": "Business name or legal name of the company",
                        "type": "string",
                        "example": "My Company S.A."
                    },
                    "dob": {
                        "description": "Date of fundation of the company",
                        "type": "string",
                        "format": "date",
                        "example": "1990-02-20"
                    },
                    "vat": {
                        "description": "VAT/NIF of the company",
                        "type": "string",
                        "example": "ESX1234567X"
                    },
                    "phone": {
                        "description": "Phone of the company",
                        "type": "string",
                        "example": "+3464500000"
                    },
                    "phone2": {
                        "description": "Phone2 of the company",
                        "type": "string",
                        "example": "+3464500000"
                    }
                },
                "type": "object"
            },
            "Email": {
                "type": "object"
            },
            "Lead": {
                "required": [
                    "name",
                    "country"
                ],
                "properties": {
                    "name": {
                        "description": "Name of the lead",
                        "type": "string",
                        "example": "My Company"
                    },
                    "business_name": {
                        "description": "Business name or legal name of the lead",
                        "type": "string",
                        "example": "My Company S.A."
                    },
                    "dob": {
                        "description": "Date of fundation of the lead",
                        "type": "string",
                        "format": "date",
                        "example": "1990-02-20"
                    },
                    "vat": {
                        "description": "VAT/NIF of the lead",
                        "type": "string",
                        "example": "ESX1234567X"
                    },
                    "phone": {
                        "description": "Phone of the lead",
                        "type": "string",
                        "example": "+3464500000"
                    },
                    "phone2": {
                        "description": "Phone2 of the lead",
                        "type": "string",
                        "example": "+3464500000"
                    },
                    "mobile": {
                        "description": "Mobile of the lead",
                        "type": "string",
                        "example": "+3464500000"
                    },
                    "email": {
                        "description": "Email of the lead",
                        "type": "string",
                        "format": "email",
                        "example": "jhon.doe@email.com"
                    },
                    "email2": {
                        "description": "Email2 of the lead",
                        "type": "string",
                        "format": "email",
                        "example": "jhon.doe@email.com"
                    }
                },
                "type": "object"
            },
            "Order": {
                "required": [
                    "customer_id",
                    "amount"
                ],
                "properties": {
                    "customer_id": {
                        "description": "Customer ID of the Order",
