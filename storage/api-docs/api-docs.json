                        "example": "1"
                    },
                    "amount": {
                        "description": "Amount of the Order",
                        "type": "number",
                        "example": "21.70"
                    }
                },
                "type": "object"
            },
            "Product": {
                "required": [
                    "category_id",
                    "name"
                ],
                "properties": {
                    "category_id": {
                        "description": "Category ID of the product",
                        "type": "integer",
                        "example": "1"
                    },
                    "brand_id": {
                        "description": "Brand ID of the product",
                        "type": "integer",
                        "example": "2"
                    },
                    "name": {
                        "description": "Name of the product",
                        "type": "string",
                        "example": "Hervidor Russell Hobbs"
                    },
                    "model": {
                        "description": "Model of the product",
                        "type": "string",
                        "example": "Colours Plus+"
                    },
                    "sku": {
                        "description": "SKU of the product",
                        "type": "string",
                        "example": "RUS*24994-70"
                    },
                    "barcode": {
                        "description": "EAN-13 barcode of the product",
                        "type": "string",
                        "example": "4008496982943"
                    },
                    "photo": {
                        "description": "Photo of the product",
                        "type": "string",
                        "example": "product.jpg"
                    },
                    "cost": {
                        "description": "Cost of the product",
                        "type": "number",
                        "example": "10.5"
                    },
                    "price": {
                        "description": "Price of the product",
                        "type": "number",
                        "example": "21.70"
                    },
                    "min_stock_quantity": {
                        "description": "Min Stock Quantity of the product",
                        "type": "integer",
                        "example": "10"
                    },
                    "quantity": {
                        "description": "Quantity of the product",
                        "type": "integer",
                        "example": "33"
                    },
                    "description": {
                        "description": "Description of the product",
                        "type": "string",
                        "example": "This is a product description"
                    },
                    "elaboration_date": {
                        "description": "Elaboration date of the product",
                        "type": "string",
                        "format": "date",
                        "example": "2023-01-01"
                    },
                    "expiration_date": {
                        "description": "Expiration date of the product",
                        "type": "string",
                        "format": "date",
                        "example": "2023-12-01"
                    },
                    "tags": {
                        "description": "Tags of the product",
                        "type": "string",
                        "example": "['hervidor', 'pava electrica']"
                    }
                },
                "type": "object"
            },
            "Supplier": {
                "required": [
                    "name"
                ],
                "type": "object"
            },
            "Ticket": {
                "required": [
                    "category_id",
                    "name"
                ],
                "type": "object"
            },
            "User": {
                "required": [
                    "first_name",
                    "email",
                    "password"
                ],
                "properties": {
                    "first_name": {
                        "description": "First Name of the user",
                        "type": "string",
                        "example": "John"
                    },
                    "last_name": {
                        "description": "Last Name of the user",
                        "type": "string",
                        "example": "Smith"
                    },
                    "email": {
                        "description": "Email of the user",
                        "type": "string",
                        "format": "email",
                        "example": "john.smith@company.com"
                    },
                    "phone": {
                        "description": "Phone of the user",
                        "type": "string",
                        "example": "+3464500000"
                    },
                    "password": {
                        "description": "Password of the user",
                        "type": "string",
                        "format": "password",
                        "example": ""
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "description": "Authorisation with JWT generated tokens",
                "name": "Authorization",
                "in": "header",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    }
}